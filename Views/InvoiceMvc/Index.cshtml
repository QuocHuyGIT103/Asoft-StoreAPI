@model List<StoreAPI.Models.Invoice>
@{
    ViewData["Title"] = "Quản lý hóa đơn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto p-4">
    <h2 class="text Sex, font-bold mb-4">Danh sách hóa đơn</h2>
    <a href="@Url.Action("Create", "InvoiceMvc")" class="bg-blue-600 text-white p-2 rounded-lg hover:bg-blue-700 mb-4 inline-block transition duration-200">Thêm hóa đơn</a>
    @if (TempData["Error"] != null)
    {
        <p class="text-red-500 mb-4">@TempData["Error"]</p>
    }
    @if (Model != null && Model.Any())
    {
        <table class="w-full border-collapse border border-gray-300 table-auto">
            <thead>
                <tr class="bg-gray-200">
                    <th class="border p-2 text-left">Mã hóa đơn</th>
                    <th class="border p-2 text-left">Mã khách hàng</th>
                    <th class="border p-2 text-left">Ngày lập</th>
                    <th class="border p-2 text-left">Tổng tiền</th>
                    <th class="border p-2 text-left">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var invoice in Model)
                {
                    <tr class="hover:bg-gray-100">
                        <td class="border p-2">@invoice.InvoiceID</td>
                        <td class="border p-2">@invoice.CustomerID</td>
                        <td class="border p-2">@invoice.InvoiceDate.ToString("dd/MM/yyyy")</td>
                        <td class="border p-2">@invoice.TotalPrice.ToString("N0") VNĐ</td>
                        <td class="border p-2">
                            <a href="@Url.Action("Edit", "InvoiceMvc", new { id = invoice.InvoiceID })" class="text-blue-600 hover:underline mr-2">Sửa</a>
                            <a href="@Url.Action("Delete", "InvoiceMvc", new { id = invoice.InvoiceID })" class="text-red-600 hover:underline" onclick="return confirm('Bạn có chắc muốn xóa?')">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-gray-500">Không có hóa đơn nào.</p>
    }
</div>