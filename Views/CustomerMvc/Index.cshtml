@model List<StoreAPI.Models.Customer>
@{
    ViewData["Title"] = "Quản lý khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-2xl font-bold mb-4">Danh sách khách hàng</h2>
<a href="@Url.Action("Create", "CustomerMvc")" class="bg-blue-600 text-white p-2 rounded-lg hover:bg-blue-700 mb-4 inline-block transition duration-200">Thêm khách hàng</a>
@if (TempData["Error"] != null)
{
    <p class="text-red-500">@TempData["Error"]</p>
}
<table class="w-full border-collapse border">
    <thead>
        <tr class="bg-gray-200">
            <th class="border p-2">Mã khách hàng</th>
            <th class="border p-2">Tên khách hàng</th>
            <th class="border p-2">Số điện thoại</th>
            <th class="border p-2">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td class="border p-2">@customer.CustomerID</td>
                <td class="border p-2">@customer.CustomerName</td>
                <td class="border p-2">@customer.Phone</td>
                <td class="border p-2">
                    <a href="@Url.Action("Edit", "CustomerMvc", new { id = customer.CustomerID })" class="text-blue-600 hover:underline mr-2">Sửa</a>
                    <a href="@Url.Action("Delete", "CustomerMvc", new { id = customer.CustomerID })" class="text-red-600 hover:underline" onclick="return confirm('Bạn có chắc muốn xóa?')">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>