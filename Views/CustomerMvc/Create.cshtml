@model StoreAPI.Models.Customer
@{
    ViewData["Title"] = "Thêm khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto p-4 max-w-md">
    <h2 class="text-2xl font-bold mb-4">Thêm khách hàng</h2>
    @if (ViewData["Error"] != null)
    {
        <p class="text-red-500 mb-4">@ViewData["Error"]</p>
    }

    <!-- Đường dẫn gọi đúng controller + action -->
    <form action="/CustomerMvc/Create" method="post" class="space-y-4">
        <div>
            <label for="CustomerID" class="block text-gray-700 font-medium">Mã khách hàng</label>
            <input name="CustomerID" id="CustomerID" class="w-full p-2 border rounded-lg" required />
        </div>
        <div>
            <label for="CustomerName" class="block text-gray-700 font-medium">Tên khách hàng</label>
            <input name="CustomerName" id="CustomerName" class="w-full p-2 border rounded-lg" required />
        </div>
        <div>
            <label for="Phone" class="block text-gray-700 font-medium">Số điện thoại</label>
            <input name="Phone" id="Phone" class="w-full p-2 border rounded-lg" />
        </div>
        <button type="submit" class="bg-blue-600 text-white p-2 rounded-lg hover:bg-blue-700">Thêm</button>
    </form>
</div>
