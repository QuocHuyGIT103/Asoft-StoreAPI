@model StoreAPI.Models.Customer
@{
    ViewData["Title"] = "Sửa khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto p-4 max-w-md">
    <h1 class="text-2xl font-bold mb-4">Sửa khách hàng</h1>

    @if (ViewData["Error"] != null)
    {
        <p class="text-red-500 mb-4">@ViewData["Error"]</p>
    }

    <form action="/CustomerMvc/Edit" method="post" class="space-y-4">
        <input id="CustomerID" name="CustomerID" value="@Model.CustomerID" class="w-full p-2 border rounded-lg bg-gray-100" readonly />

        <div>
            <label for="CustomerName" class="block text-gray-700 font-medium">Tên khách hàng</label>
            <input id="CustomerName" name="CustomerName" value="@Model.CustomerName" class="w-full p-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required />
        </div>

        <div>
            <label for="Phone" class="block text-gray-700 font-medium">Số điện thoại</label>
            <input id="Phone" name="Phone" value="@Model.Phone" class="w-full p-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>

        <button type="submit" class="bg-blue-600 text-white p-2 rounded-lg hover:bg-blue-700 transition duration-200">Lưu</button>
    </form>
</div>
