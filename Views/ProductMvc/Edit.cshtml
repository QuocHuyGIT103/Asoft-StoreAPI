@model StoreAPI.Models.Product
@{
    ViewData["Title"] = "Sửa sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto p-4 max-w-md">
    <h1 class="text-2xl font-bold mb-4">Sửa sản phẩm</h1>
    @if (ViewData["Error"] != null)
    {
        <p class="text-red-500 mb-4">@ViewData["Error"]</p>
    }
    <form action="/ProductMvc/Edit" method="post" class="space-y-4">
        <input id="ProductID" name="ProductID" value="@Model.ProductID" class="w-full p-2 border rounded-lg bg-gray-100" readonly />
        <div>
            <label for="ProductName" class="block text-gray-700 font-medium">Tên sản phẩm</label>
            <input id="ProductName" name="ProductName" value="@Model.ProductName" class="w-full p-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required />
        </div>
        <div>
            <label for="Price" class="block text-gray-700 font-medium">Giá</label>
            <input id="Price" name="Price" type="number" step="0.01" value="@Model.Price" class="w-full p-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required />
        </div>
        <button type="submit" class="bg-blue-600 text-white p-2 rounded-lg hover:bg-blue-700 transition duration-200">Lưu</button>
    </form>
</div>