@model StoreAPI.Models.Product
@{
    ViewData["Title"] = "Thêm sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto p-4 max-w-md">
    <h2 class="text-2xl font-bold mb-4">Thêm sản phẩm</h2>
    @if (ViewData["Error"] != null)
    {
        <p class="text-red-500 mb-4">@ViewData["Error"]</p>
    }
    <form action="/ProductMvc/Create" method="post" class="space-y-4">
        <div>
            <label for="ProductID" class="block text-gray-700 font-medium">Mã sản phẩm</label>
            <input id="ProductID" name="ProductID" class="w-full p-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required />
        </div>
        <div>
            <label for="ProductName" class="block text-gray-700 font-medium">Tên sản phẩm</label>
            <input id="ProductName" name="ProductName" class="w-full p-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required />
        </div>
        <div>
            <label for="Price" class="block text-gray-700 font-medium">Giá</label>
            <input id="Price" name="Price" type="number" step="0.01" class="w-full p-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required />
        </div>
        <button type="submit" class="bg-blue-600 text-white p-2 rounded-lg hover:bg-blue-700 transition duration-200">Thêm</button>
    </form>
</div>